<%= form_with(model: client, local: true, class: 'space-y-4' ) do |f| %>
  <% if client.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4" role="alert">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
              clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(client.errors.count, "erreur" ) %> empÃªche(nt) la sauvegarde de ce client :
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% client.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
              <% end %>
          </ul>
        </div>
      </div>
    </div>
    <% end %>

      <div class="field">
        <%= f.label :nom, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.text_field :nom,
            class: "mt-1 block w-full rounded-md #{client.errors[:nom].any? ? 'border-red-300' : 'border-gray-300'} shadow-sm focus:border-blue-500 focus:ring-blue-500"
            %>
            <% if client.errors[:nom].any? %>
              <p class="mt-1 text-sm text-red-600">
                <%= client.errors[:nom].first %>
              </p>
              <% end %>
      </div>

      <div class="field">
        <%= f.label :prenom, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.text_field :prenom,
            class: "mt-1 block w-full rounded-md #{client.errors[:prenom].any? ? 'border-red-300' : 'border-gray-300'} shadow-sm focus:border-blue-500 focus:ring-blue-500"
            %>
            <% if client.errors[:prenom].any? %>
              <p class="mt-1 text-sm text-red-600">
                <%= client.errors[:prenom].first %>
              </p>
              <% end %>
      </div>

      <div class="field">
        <%= f.label :adresse, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.text_area :adresse, rows: 3,
            class: "mt-1 block w-full rounded-md #{client.errors[:adresse].any? ? 'border-red-300' : 'border-gray-300'} shadow-sm focus:border-blue-500 focus:ring-blue-500"
            %>
            <% if client.errors[:adresse].any? %>
              <p class="mt-1 text-sm text-red-600">
                <%= client.errors[:adresse].first %>
              </p>
              <% end %>
      </div>

      <div class="field">
        <%= f.label :telephone, class: 'block text-sm font-medium text-gray-700' %>
          <%= f.text_field :telephone,
            class: "mt-1 block w-full rounded-md #{client.errors[:telephone].any? ? 'border-red-300' : 'border-gray-300'} shadow-sm focus:border-blue-500 focus:ring-blue-500"
            %>
            <% if client.errors[:telephone].any? %>
              <p class="mt-1 text-sm text-red-600">
                <%= client.errors[:telephone].first %>
              </p>
              <% end %>
      </div>

      <div class="flex justify-end space-x-3 mt-6">
        <%= link_to 'Annuler' , clients_path(show_all: true),
          class: 'px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500'
          %>
          <%= f.submit 'Enregistrer' ,
            class: 'inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500'
            %>
      </div>
      <% end %>